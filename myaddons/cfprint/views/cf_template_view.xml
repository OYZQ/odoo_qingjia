<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cf_template_category_list" model="ir.ui.view">
            <field name="name">cf.template.category.list</field>
            <field name="model">cf.template.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="CFPrint Templates Category">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="cf_template_category_form" model="ir.ui.view">
            <field name="name">cf.template.form</field>
            <field name="model">cf.template.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Manage CFPrint Template Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="create_date"/>
                            <field name="write_date"/>
                        </group>
                        <notebook>
                            <page string="Templates">
                                <field name="lines">
                                    <tree>
                                        <field name="templ_id"/>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="template"/>
                                        <field name="write_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cf_template_view" model="ir.ui.view">
            <field name="name">cf.template.form</field>
            <field name="model">cf.template</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Manage CFPrint Template">
                    <group>
                        <field name="templ_id"/>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="description"/>
                        <field name="template"/>
                        <field name="preview_img" widget='image'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="cf_template_list" model="ir.ui.view">
            <field name="name">cf.template.list</field>
            <field name="model">cf.template</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="CFPrint Templates">
                    <field name="templ_id"/>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="description"/>
                    <field name="template"/>
                    <field name="preview_img" widget='image'/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <!--
        <record model="ir.actions.act_window" id="action_cf_template">
            <field name="name">CFPrint Template Import</field>
            <field name="res_model">cf.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="cf_template_view"/>
            <field name="target">new</field>
        </record>
        -->

        <!-- 模板管理Action -->
        <record id="action_cf_template_category" model="ir.actions.act_window">
            <field name="name">CFPrint Template Category Management</field>
            <field name="res_model">cf.template.category</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_cf_template" model="ir.actions.act_window">
            <field name="name">CFPrint Template Management</field>
            <field name="res_model">cf.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_cf_root" name="CFPrint" parent="report.reporting_menuitem"/> <!-- 挂在 设置-技术-报告 菜单下面 -->
        <menuitem id="menu_cf_template_category" name="Templates Category" parent="cfprint.menu_cf_root" action="action_cf_template_category" sequence="1"/>
        <menuitem id="menu_cf_template" name="Templates" parent="cfprint.menu_cf_root" action="action_cf_template" sequence="3"/>
    </data>
</odoo>
